<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/hub_activity_horizontal_margin"
    android:paddingLeft="@dimen/hub_activity_horizontal_margin"
    android:paddingRight="@dimen/hub_activity_horizontal_margin"
    android:paddingTop="@dimen/hub_activity_horizontal_margin"
    tools:context=".NewTravelBookActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="제목"
        android:textColor="#AAAAAA"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Travel Book의 이름을 입력해 주세요." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:text="" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="목적지(도시)"
        android:textColor="#AAAAAA"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="런던, 뉴욕과 같은 목적지를 입력하세요" />

</LinearLayout>